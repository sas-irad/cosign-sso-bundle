<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    
   <services>
       <service id="cosign_sso.security.authentication.provider"
         class="Penn\CosignSSOBundle\Security\Authentication\Provider\CosignSSOProvider" public="false">
           <argument type="service" id="session"/>
           <argument /> <!-- User Provider -->
           <argument /> <!-- cosign app -->
       </service>

       <service id="cosign_sso.security.authentication.listener"
         class="Penn\CosignSSOBundle\Security\Firewall\CosignSSOListener" public="false">
           <argument type="service" id="security.context"/>
           <argument type="service" id="security.authentication.manager" />
       </service>
       
       <service id="cosign_util"
         class="Penn\CosignSSOBundle\Security\Authentication\Provider\CosignUtil" public="true">
           <argument type="service" id="session"/>
       </service>

       <service id="cosign_user_provider"
         class="Penn\CosignSSOBundle\Security\User\CosignUserProvider" public="true">
           <argument>%admin_users%</argument>
       </service>
              
   </services>
       
</container>
